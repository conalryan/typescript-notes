{
  "name": "lang-ts-basic",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/lang/ts/basic/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/lang/ts/basic",
        "main": "packages/lang/ts/basic/src/index.ts",
        "tsConfig": "packages/lang/ts/basic/tsconfig.lib.json",
        "assets": ["packages/lang/ts/basic/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/lang/ts/basic/**/*.ts"]
      }
    }
  },
  "tags": []
}
